{
  "name": "leonidas/leonidas",
  "description": "Framework for building WordPress plugins and themes",
  "type": "wordpress-plugin",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Chris Williams",
      "email": "spider.mane.web@gmail.com"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^7.4 || ^8.0",
    "guzzlehttp/psr7": "^2.1",
    "jawira/case-converter": "^3.4",
    "league/container": "^4.2",
    "myclabs/php-enum": "^1.8",
    "nesbot/carbon": "^2.54",
    "panamax/panamax": "@stable",
    "psr/cache": "^1.0",
    "psr/container": "^1.0 || ^2.0",
    "psr/event-dispatcher": "^1.0",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/http-message": "^1.0",
    "psr/http-server-handler": "^1.0",
    "psr/http-server-middleware": "^1.0",
    "psr/link": "^1.0 || ^2.0",
    "psr/simple-cache": "^1.0",
    "symfony/polyfill-php80": "^1.23",
    "symfony/polyfill-php81": "^1.23",
    "twig/twig": "^2.0",
    "webtheory/collection": "@stable",
    "webtheory/config": "@stable",
    "webtheory/facade": "@stable",
    "webtheory/html": "@stable",
    "webtheory/http-policy": "@stable",
    "webtheory/saveyour": "@stable",
    "webtheory/wpdmc": "@stable"
  },
  "require-dev": {
    "10up/wp_mock": "0.4.2",
    "brain/monkey": "^2.6",
    "brainmaestro/composer-git-hooks": "^2.8",
    "captainhook/captainhook": "^5.10",
    "commerceguys/addressing": "^1.0",
    "composer/installers": "^1.0 || ^2.0",
    "egulias/email-validator": "^2.1",
    "fakerphp/faker": "^1.16",
    "filp/whoops": "^2.5",
    "friendsofphp/php-cs-fixer": "^3.3",
    "geocoder-php/google-maps-provider": "^4.4",
    "giggsey/libphonenumber-for-php": "^8.10",
    "koodimonni/composer-dropin-installer": "^1.3",
    "league/flysystem": "^2.0",
    "mockery/mockery": "^1.4",
    "monolog/monolog": "^2.0",
    "nunomaduro/collision": "^5.10",
    "opis/closure": "^3.6",
    "oscarotero/env": "^2.1",
    "php-http/guzzle7-adapter": "^1.0",
    "phpbench/phpbench": "@dev",
    "phpmailer/phpmailer": "^6.6",
    "phpoption/phpoption": "^1.8",
    "phpspec/prophecy-phpunit": "^2.0",
    "phpunit/phpunit": "^9.5",
    "phpunit/phpunit-selenium": "^9.0",
    "psy/psysh": "^0.10",
    "rector/rector": "^0.12.21",
    "roave/security-advisories": "dev-latest",
    "slim/psr7": "^1.5",
    "slim/slim": "^4.7",
    "squizlabs/php_codesniffer": "^3.5",
    "symfony/asset": "^5.4",
    "symfony/console": "^5.4",
    "symfony/error-handler": "^5.4",
    "symfony/filesystem": "^5.4",
    "symfony/finder": "^5.4",
    "symfony/http-foundation": "^5.4",
    "symfony/http-kernel": "^5.4",
    "symfony/mailer": "^5.4",
    "symfony/string": "^5.4",
    "symfony/validator": "^5.4",
    "symfony/var-dumper": "^5.4",
    "symfony/var-exporter": "^5.4",
    "symfony/yaml": "^5.4",
    "vlucas/phpdotenv": "^5.4",
    "webtheory/exterminate": "@stable",
    "webtheory/wp-cli-util": "@stable",
    "webtheory/wpunit": "@stable",
    "wp-cli/wp-cli-bundle": "@stable",
    "wpackagist-plugin/classic-editor": "@stable",
    "wpackagist-plugin/disable-gutenberg": "@stable",
    "wpackagist-plugin/wp-native-php-sessions": "@stable",
    "wpackagist-theme/twentytwentytwo": "@stable"
  },
  "autoload": {
    "psr-4": {
      "Leonidas\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "asset": "npm --prefix assets",
    "bench": "vendor/bin/phpbench",
    "check": "vendor/bin/phpcs",
    "collect": "vendor/bin/var-dump-server",
    "export": "git archive --output=./build/leonidas.zip --format=zip HEAD",
    "hooks": "vendor/bin/captainhook",
    "inspect": "vendor/bin/psalm",
    "link": "bin/symlink-plugin",
    "play": "php .playground/env.php",
    "rector": "vendor/bin/rector process",
    "shell": "@wp shell",
    "test:acceptance": "vendor/bin/phpunit --testsuite acceptance",
    "test:functional": "vendor/bin/phpunit --testsuite functional",
    "test:integration": "vendor/bin/phpunit --testsuite integration",
    "test:unit": "vendor/bin/phpunit --testsuite unit",
    "test:wpunit": "vendor/bin/phpunit --testsuite wpunit",
    "watch": "vendor/bin/phpunit-watcher watch",
    "wp": "vendor/bin/wp",
    "build": [
      "@asset run build",
      "@rector",
      "@style",
      "@check",
      "@inspect",
      "@test"
    ],
    "style": [
      "vendor/bin/php-cs-fixer fix --verbose",
      "vendor/bin/phpcbf"
    ],
    "setup": [
      "composer install",
      "cp -n .env.example .env",
      "bin/build-paths",
      "bin/make-playground"
    ],
    "test": [
      "@test:unit",
      "@test:wpunit",
      "@test:integration",
      "@test:functional",
      "@test:acceptance"
    ],
    "wp:init": [
      "@wp core download",
      "@link"
    ],
    "wp:refresh": [
      "@wp db export",
      "@wp db clean --yes",
      "@wp core install"
    ],
    "post-install-cmd": [
      "@env"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "apcu-autoloader": false,
    "sort-packages": true,
    "process-timeout": 0,
    "allow-plugins": {
      "composer/installers": true,
      "composer/package-versions-deprecated": true,
      "koodimonni/composer-dropin-installer": true
    }
  },
  "extra": {
    "build-paths": {
      "build": {
        "phpunit": {},
        "php-cs-fixer": {},
        "wordpress": {}
      },
      "logs": {}
    },
    "installer-paths": {
      "wordpress/wp-content/plugins/{$name}": [
        "type:wordpress-plugin"
      ],
      "wordpress/wp-content/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "wordpress/wp-content/themes/{$name}/": [
        "type:wordpress-theme"
      ],
      "vendor/{$vendor}/{$name}/": [
        "type:wordpress-dropin"
      ]
    },
    "dropin-paths": {
      "wordpress/wp-content/": [],
      "wordpress/wp-content/mu-plugins": []
    }
  }
}
