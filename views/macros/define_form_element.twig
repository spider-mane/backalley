{% import _self as self %}


{{ self.define_form_element(element) }}


{% macro define_form_element(element) %}
    {% from "define_render_input.twig" import define_render_input %}
    {% from "render_select.twig" import render_select %}
    {% from "render_input_list.twig" import render_input_list %}
    {% from "render_textarea.twig" import render_textarea %}


    {% if element.form_element == 'input' %}

        {{ define_render_input(element) }}

    {% elseif element.form_element == 'select' %}

        {{ render_select(element) }}

    {% elseif element.form_element == 'textarea' %}

        {{ render_textarea(element) }}

    {% elseif element.form_element == 'input_list' %}

        {{ render_input_list(element) }}

    {% endif %}

{% endmacro define_form_element %}