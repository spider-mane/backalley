<div class="backalley-wrap">
    <h3>Hours</h3>
    <div class="row">
        <div class="col-2"></div>
        <div class="col-2">Open</div>
        <div class="col-2">Close</div>
    </div>
    {% for day, attr in days %}
        <div class="row">
            <div class="col-2">{{ attr.title }}</div>
            {% for hour, field in attr.hours %}
                <div class="col-2">
                    <label for="{{ field.id }}" class="screen-reader-text"></label>
                    <input type="time" id="{{ field.id }}" name="{{ field.name }}" value="{{ field.value }}" class="">
                </div>
            {% endfor %}
        </div>
    {% endfor %}
</div>