{# {{ dump('fields') }} #}
<div class="backalley-wrap">

    <fieldset {{ fieldset_attributes }}>
        <h3>{{ fieldset_title }}</h3>

        {% for field in fields %}

            <div class="row">
                <div class="col-2">
                    <label for="{{ field.id }}">{{ field.title }}</label>
                </div>
                <div class="col">
                    {{ field.field }}
                </div>

                {% if field.wp_submit_button is not null %}

                    <div class="col-1">
                        {% set btn = field.wp_submit_button %}
                        {{ wp_submit_button(btn.text, btn.type, btn.name, btn.wrap, btn.other_attributes) }}
                    </div>

                {% endif %}

            </div>

        {% endfor %}

    </fieldset>

</div>